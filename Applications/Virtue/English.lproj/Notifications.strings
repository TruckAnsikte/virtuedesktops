// Notifications and Notification Groups 
// 
// Keys are the key of the notification plus an appended _name or _desc
// prefix indicating if this is the name or description part. 
// 


// Navigational group used for requests that change between desktops and to 
// show navigational helpers like the pager
VTGroupNavigation_name = "Navigation"; 

// Desktop manipulation group containing operations on desktops 
VTGroupDesktops_name = "Desktop manipulation";
	
// Inspectors... 
VTGroupInspection_name = "Inspectors";


// Request to change the desktop to a named desktop. Name and Description take
// the desktop name as the only format string parameter. 
VTRequestChangeDesktop_name				= "Show desktop '%@'"; 
VTRequestChangeDesktop_desc				= "Shows the desktop named '%@'";
	
// Request to change the desktop to the previous desktop. 
VTRequestChangeDesktopToLast_name		= "Show previous desktop"; 
VTRequestChangeDesktopToLast_desc		= "Shows the desktop that you worked on before you switched to the current desktop"; 
	
// Request to change the desktop to the desktop marked as the Snapback desktop
VTRequestChangeDesktopToSnapback_name	= "Show Snapback desktop"; 
VTRequestChangeDesktopToSnapback_desc	= "Shows the desktop that was marked as the snapback desktop"; 
	
// Request to set the currently visible desktop as the Snapback desktop 
VTRequestSetSnapbackDesktop_name		= "Mark as Snapback desktop"; 
VTRequestSetSnapbackDesktop_desc		= "Sets the currently shown desktop to be the snapback desktop"; 
	
// Request to change to the desktop to the east (the right)
VTRequestChangeDesktopToEast_name		= "Show desktop to the right";
VTRequestChangeDesktopToEast_desc		= "Shows the desktop located right of the currently shown desktop"; 
	
// Request to change to the desktop to the west (the left) 
VTRequestChangeDesktopToWest_name		= "Show desktop to the left";
VTRequestChangeDesktopToWest_desc		= "Shows the desktop located left of the currently shown desktop";
	
// Request to change to the desktop to the north (above) 
VTRequestChangeDesktopToNorth_name	= "Show desktop to the top";
VTRequestChangeDesktopToNorth_desc	= "Shows the desktop located above the currently shown desktop";
	
// Request to change to the desktop to the south (below)
VTRequestChangeDesktopToSouth_name	= "Show desktop to the bottom";
VTRequestChangeDesktopToSouth_desc	= "Shows the desktop located below the currently shown desktop";
	
// Request to show the overlay pager in Normal-Mode
VTRequestShowPager_name					= "Show desktop overlay pager"; 
VTRequestShowPager_desc					= "Shows the desktop overlay pager that allows you to browse available desktops and switch to another desktop";
	
// Request to show the overlay pager in Sticky-Mode 
VTRequestShowPagerAndStick_name			= "Show sticky desktop overlay pager"; 
VTRequestShowPagerAndStick_desc			= "Shows the desktop overlay in pager mode. Allows you to brows available desktops and switch to another desktop without the need to hold the modifier key down all the time"; 
	
// Request to inspect Desktops using the Desktops Inspector (Deprecated) 
VTRequestInspectDesktops_name			= "Inspect available desktops";
VTRequestInspectDesktops_desc			= "Displays all available desktops, their status and allows renaming, reordering, adding, and removal of desktops";
	
// Request to inspect the visible desktop using the Desktop Inspector 
VTRequestInspectDesktop_name			= "Inspect desktop"; 
VTRequestInspectDesktop_desc			= "Displays information about a specific desktop and provides a list of all open applications and windows of the desktop"; 
	
// Request to inspect Applications using the Application Inspector 
VTRequestInspectApplications_name		= "Inspect applications"; 
VTrequestInspectApplications_desc		= "Displays information about running and remembered application states like their desktop and sticky state."; 
	
// Request to inspect preferences 
VTRequestInspectPreferences_name		= "Inspect preferences"; 
VTRequestInspectPreferences_desc		= "Displays user preferences of Virtue"; 
	
// Request to toggle visiblity of the statusbar menu 
VTRequestToggleStatusbarMenu_name		= "Toggle statusbar menu";
VTRequestToggleStatusbarMenu_desc		= "Allows you to hide and show the statusbar menu"; 
	
// Request to delete the visible desktop 
VTRequestDeleteDesktop_name				= "Delete shown desktop";
VTRequestDeleteDesktop_desc				= "Deletes the currently shown desktop optionally moving all windows to another desktop and switches the shown desktop to the previous desktop";
	
// Request to show the overlay window of the window under the mouse pointer 
VTRequestDisplayOverlay_name			= "Display window control"; 
VTRequestDisplayOverlay_desc			= "Displays the overlay window control that allows you to sticky/unsticky and move windows between desktops"; 