// Notifications and Notification Groups 
// 
// Keys are the key of the notification plus an appended _name or _desc
// prefix indicating if this is the name or description part. 
// 


// Navigational group used for requests that change between desktops and to 
// show navigational helpers like the pager
VTGroupNavigation_name					= "Navigazione"; 

// Desktop manipulation group containing operations on desktops 
VTGroupDesktops_name					= "Manipolazione desktop";
	
// Inspectors... 
VTGroupInspection_name					= "Ispettori";


// Request to change the desktop to a named desktop. Name and Description take
// the desktop name as the only format string parameter. 
VTRequestChangeDesktop_name				= "Visualizza desktop '%@'"; 
VTRequestChangeDesktop_desc				= "Visualizza il desktop avente nome '%@'.";
	
// Request to change the desktop to the previous desktop. 
VTRequestChangeDesktopToLast_name		= "Visualizza desktop precedente"; 
VTRequestChangeDesktopToLast_desc		= "Visualizza il desktop su cui si è lavorato prima di passare a quella corrente";
	
// Request to change the desktop to the desktop marked as the Snapback desktop
VTRequestChangeDesktopToSnapback_name	= "Visualizza desktop di Snapback"; 
VTRequestChangeDesktopToSnapback_desc	= "Visualizza il desktop contrassegnato come desktop di Snapback"; 
	
// Request to set the currently visible desktop as the Snapback desktop 
VTRequestSetSnapbackDesktop_name		= "Contrassegna desktop di Snapback"; 
VTRequestSetSnapbackDesktop_desc		= "Contrassegna il desktop visualizzato come desktop di Snapback"; 
	
// Request to change to the desktop to the east (the right)
VTRequestChangeDesktopToEast_name		= "Visualizza desktop ad est";
VTRequestChangeDesktopToEast_desc		= "Visualizza il desktop collocato a est di quello attualmente visualizzato"; 
	
// Request to change to the desktop to the west (the left) 
VTRequestChangeDesktopToWest_name		= "Visualizza desktop ad ovest";
VTRequestChangeDesktopToWest_desc		= "Visualizza il desktop collocato ad ovest di quello attualmente visualizzato";
	
// Request to change to the desktop to the north (above) 
VTRequestChangeDesktopToNorth_name		= "Visualizza desktop a nord";
VTRequestChangeDesktopToNorth_desc		= "Visualizza il desktop collocato a nord di quello attualmente visualizzato";
	
// Request to change to the desktop to the south (below)
VTRequestChangeDesktopToSouth_name		= "Visualizza desktop a sud";
VTRequestChangeDesktopToSouth_desc		= "Visualizza il desktop collocato a sud di quello attualmente visualizzato";
	
// Request to show the overlay pager in Normal-Mode
VTRequestShowPager_name					= "Visualizza il pager desktop"; 
VTRequestShowPager_desc					= "Visualizza il pager desktop che permette di navigare rapidamente tra i desktop disponibili e di visualizzarne uno";
	
// Request to show the overlay pager in Sticky-Mode 
VTRequestShowPagerAndStick_name			= "Attiva il pager desktop"; 
VTRequestShowPagerAndStick_desc			= "Attiva il pager desktop. Permette di navigare tra i desktop disponibili e di visualizzarne uno, senza la necessità di tener premuto il tasto di attivazione"; 

// Request to inspect Desktops using the Desktops Inspector (Deprecated) 
VTRequestInspectDesktops_name			= "Ispeziona desktop disponibili";
VTRequestInspectDesktops_desc			= "Visualizza tutti i desktop disponibili con il relativo stato, permettendo di rnominarli, di riordinarli, di rimuoverli e o di aggiungerne di nuovi";
	
// Request to inspect the visible desktop using the Desktop Inspector 
VTRequestInspectDesktop_name			= "Ispeziona il desktop"; 
VTRequestInspectDesktop_desc			= "Visualizza le informazioni, le applicazioni e le finestre aperte riguardo uno specifico desktop"; 
	
// Request to inspect Applications using the Application Inspector 
VTRequestInspectApplications_name		= "Ispeziona applicazioni"; 
VTrequestInspectApplications_desc		= "Visualizza le informazioni delle applicazioni attiva e dei loro stati memorizzati, tipo desktop e stato di evidenziazione"; 
	
// Request to inspect preferences 
VTRequestInspectPreferences_name		= "Ispeziona preferenze"; 
VTRequestInspectPreferences_desc		= "Visualizza le preferenze di Virtue per l'utente"; 
	
// Request to toggle visiblity of the statusbar menu 
VTRequestToggleStatusbarMenu_name		= "Commuta barra di stato menù";
VTRequestToggleStatusbarMenu_desc		= "Permette di nascondere o visualizzare la barra di stato menù"; 
	
// Request to delete the visible desktop 
VTRequestDeleteDesktop_name				= "Cancella il desktop visualizzato";
VTRequestDeleteDesktop_desc				= "Cancella il desktop attualmente visualizzato, spostando tutte le eventuali finestre su un'altro desktop e visualizzando il desktop precedente";
	
// Request to show the overlay window of the window under the mouse pointer 
VTRequestDisplayOverlay_name			= "Visualizza il controllo finestre"; 
VTRequestDisplayOverlay_desc			= "Visualizza il controllo finestre, che permette di evidenziare  e spostare le finestre tra i desktop"; 